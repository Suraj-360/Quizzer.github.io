<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quizzer" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="aboutStyle">@style/Widget.App.AboutPage</item>
    </style>

    <style name="AlertCustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/alertColor</item>
    </style>

    <!-- Define a global style for AboutPage in your 'styles.xml' -->
    <style name="Widget.App.AboutPage" parent="about_About">
        <item name="aboutBackground">#ffffff</item>
        <item name="aboutElementIconTint">#333333</item>
        <item name="aboutSeparatorColor">#999999</item>
        <item name="aboutDescriptionTextAppearance">@style/TextAppearance.App.AboutPage.Description</item>
        <!-- similarly, you can also apply the following text appearances -->
        <item name="aboutElementTextAppearance">@style/about_elementTextAppearance.Dark</item>
        <item name="aboutGroupTextAppearance">@style/TextAppearance.App.AboutPage.Group</item>
        <item name="aboutStyle">@style/TextAppearance.App.AboutPage.Txt</item>
    </style>

    <style name="TextAppearance.App.AboutPage.Description" parent="about_descriptionTextAppearance.Dark">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#2B2A2A</item>
    </style>

    <style name="TextAppearance.App.AboutPage.Txt" parent="about_elementTextAppearance">
        <item name="android:textColor">#000</item>
    </style>

    <style name="TextAppearance.App.AboutPage.Group" parent="about_groupTextAppearance">
        <item name="android:textColor">#F44336</item>
    </style>


</resources>